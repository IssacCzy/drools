package com.oristar.tennat10001.module10

import com.oristar.vo.AgeRuleFact
import com.oristar.vo.ScoreRuleFact

rule "10002_rule_1"
	when
		$ageRuleFact: AgeRuleFact(age >= 20 && sex == 1)
		$scoreRuleFact: ScoreRuleFact(score>=80)
	then
		$ageRuleFact.takeCareBrother();
	end
rule "10002_rule_2"
	when
        $ageRuleFact: AgeRuleFact(age < 20)
        $scoreRuleFact: ScoreRuleFact(score < 60)
    then
        $scoreRuleFact.go_learning($scoreRuleFact.getScore());
    end