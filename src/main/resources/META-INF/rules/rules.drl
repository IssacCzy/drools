package rules

import com.oristar.vo.Person

rule "check age1"
	when
		$person: Person(age <= 10)
	then
		$person.setDes("too yong");
	end
rule "check age2"
	when
		$person: Person(age > 10)
	then
		$person.setDes("age is ok");
	end
rule "check sex1"
	when
	    $person: Person(sex == 1)
    then
    	$person.setDes($person.getDes() + " and is a boy!");
	end
rule "check sex2"
	when
	    $person: Person(sex != 1)
    then
    	$person.setDes($person.getDes() + " and is a girl!");
	end